<% include  partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="img-show">
                <img class="img-responsive" src="<%= thisCampground.image %>" alt="<%= thisCampground.name %>">
                <div class="caption">
                    <br/>
                    <h5 class="float-right" > Â£9.00/night </h5>
                    <h4><%= thisCampground.name %></h4>
                    Submitted by: <b><%= thisCampground.author.username %></b>
                    <p></p>
                    <p><%= thisCampground.description %></p>
                </div>
            </div>
            <br>
            <div class="card card-body bg-light" >
                <div>
                    <a class="btn btn-primary btn-sm" href="/campgrounds">Back to Campgrounds</a>                    
                    <a class="float-right btn btn-success btn-sm" href="/campgrounds/<%= thisCampground._id %>/comments/new">Add New Comment</a>
                </div>
                <br/>
                <% thisCampground.comment.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <b><%= comment.author.username %></b>
                            <span class="float-right" >10 minutes ago</span>
                            <br/>
                            <%= comment.text %>
                            <hr/>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>
<br/>

<p>
</p>


    






<% include partials/footer %>